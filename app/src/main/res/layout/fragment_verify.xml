<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.Guideline
        android:id="@+id/gl_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.18"
 />
    <RelativeLayout
        android:id="@+id/rl_verify"
        android:layout_width="0dp"
       android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/gl_two"
        app:layout_constraintLeft_toRightOf="@+id/gl">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/iv_verify"

            />
        <EditText
            android:id="@+id/et_verify_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="19"
            android:maxLines="1"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="30dp"
            android:background="@color/colorPrimary"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/rl_verified"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/gl_two"
        app:layout_constraintLeft_toRightOf="@+id/gl"
        android:visibility="gone"
        android:background="@drawable/lv_verify"
       >
        <TextView
            android:id="@+id/tv_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="20dp"
            android:gravity="start"
            android:textColor="@color/content_gray"
         />

        <TextView
            android:id="@+id/tv_preferential"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:gravity="start"

            android:textColor="@color/content_gray"
            />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:gravity="start"

            android:textColor="@color/content_gray"
           />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:gravity="start"
            android:textColor="@color/content_gray"
            app:layout_constraintLeft_toLeftOf="@+id/gl"
            app:layout_constraintTop_toBottomOf="@+id/tv_num"
            app:layout_constraintRight_toLeftOf="@+id/gl_two" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"

            android:gravity="start"
            android:textColor="@color/content_gray"
         />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_verify"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(华都店)"
        android:textColor="@color/content_gray"
        android:padding="2dp"
        app:layout_constraintBottom_toTopOf="@+id/gl_horizontal" />




    <android.support.constraint.Guideline
        android:id="@+id/gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.29"

        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="172dp" />
    <android.support.constraint.Guideline
        android:id="@+id/gl_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.71"

        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="421dp" />




</android.support.constraint.ConstraintLayout>