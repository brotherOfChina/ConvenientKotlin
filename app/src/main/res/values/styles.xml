<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="loadingDialog" parent="android:Animation.Dialog">

        <item name="android:gravity">center</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item> <!-- 模糊 -->
        <item name="android:windowIsFloating">true</item><!-- 类似windows的弹出Dialog -->
        <item name="android:windowContentOverlay">@null</item><!-- 不要头部阴影 -->
        <item name="android:windowBackground">@color/transparent</item>   <!-- 背景颜色设置透明-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="LoadingTextView">
        <item name="textStyle">vertical</item>
        <item name="textColor">@color/gray_text</item>
        <item name="textSize">12sp</item>
        <item name="textPadding">5dp</item>
        <item name="android:text">"加载中，请稍候"</item>
    </style>
</resources>
